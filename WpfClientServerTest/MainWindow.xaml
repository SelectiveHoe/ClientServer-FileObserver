<Window x:Class="WpfClientServerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientServerTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed">
    <Grid>
        <TabControl>
            <TabItem Header="Console">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="ConsoleLog" ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="True" Height="Auto"></TextBox>
                    <TextBox x:Name="ConsoleMessage" Grid.Row="1" KeyDown="ConsoleMessage_KeyDown"></TextBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
